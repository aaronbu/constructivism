{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
{{#has tag="thoughts"}} {{!Thought post}}
  <main class="content" role="main">
    <article class="{{post_class}} thought">
      <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
        <section class="post-meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </section>
      </header>

      <section class="post-content">
        {{content}}
      </section>

      <footer class="post-footer">
        {{#author}}
          <section class="author">
            {{#if image}}
              <figure class="author-image">
                <span class="img" style="background-image: url({{image}})">{{name}}'s Picture</span>
              </figure>
            {{/if}}
            <h4 class="author-name"><span>Posted by</span>{{name}}</h4>
          </section>
        {{/author}}

        <section class="share">
          <span>Share this</span>
          <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
              onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Twitter</a>
          <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
              onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Facebook</a>
          <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">Google+</a>
        </section>
      </footer>
    </article>
  </main>
{{else}} {{!Portfolio post}}
  {{#if image}}
    <section class="post-heading">
      <time class="main-date" datetime="{{date format='YYYY-MM-DD'}}">
        <span class="mm">{{date format="MM"}}</span>
        <span class="yy">{{date format="YY"}}</span>
      </time>
      <header class="main-header post-head" style="background-image: url({{image}})">
      </header>
    </section>
  {{/if}}

  <main class="content" role="main">
    <article class="{{post_class}}">
      <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
        <section class="post-meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </section>
      </header>

      <section class="post-content">
        {{content}}
      </section>

      <footer class="post-footer">
        <section class="related-posts">
          <span>See other projects!</span>

          {{#prev_post}}
            <a href="{{url}}">{{title}}</a>
          {{/prev_post}}

          {{#next_post}}
            <a href="{{url}}">{{title}}</a>
          {{/next_post}}
        </section>

        <section class="share">
          <span>Share this</span>
          <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
              onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Twitter</a>
          <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
              onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Facebook</a>
          <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">Google+</a>
        </section>
      </footer>

    </article>
  </main>
{{/has}}

{{/post}}
